<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_290sdp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:background="@drawable/card_bg"
    android:layoutDirection="ltr"
    android:layout_marginBottom="@dimen/_5sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/alarmView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </View>


        <TextView
            android:id="@+id/ringToneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:singleLine="true"
            android:text="Snooze"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="@id/alarmView"
            app:layout_constraintTop_toTopOf="@+id/alarmView"
            app:layout_constraintVertical_bias="0.076" />




        <TextView
            android:id="@+id/fiveMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="5 minutes"
            android:textColor="#939292"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ringToneName"
            app:layout_constraintTop_toBottomOf="@+id/ringToneName"
            app:layout_constraintVertical_bias="0.07" />

        <RadioButton
            android:id="@+id/check"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:buttonTint="#9CB135"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/fiveMinutes"
            app:layout_constraintEnd_toEndOf="@id/alarmView"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toEndOf="@+id/fiveMinutes"
            app:layout_constraintTop_toTopOf="@+id/fiveMinutes"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:id="@+id/tenMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="10 minutes"
            android:textColor="#939292"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintStart_toStartOf="@+id/ringToneName"
            app:layout_constraintTop_toBottomOf="@+id/fiveMinutes"
            app:layout_constraintVertical_bias="0.05" />

        <RadioButton
            android:id="@+id/check10"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:buttonTint="#9CB135"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/tenMinutes"
            app:layout_constraintEnd_toEndOf="@+id/check"
            app:layout_constraintStart_toStartOf="@+id/check"
            app:layout_constraintTop_toTopOf="@+id/tenMinutes"
            app:layout_constraintVertical_bias="0.47" />


        <TextView
            android:id="@+id/fifteenMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="15 minutes"
            android:textColor="#939292"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintStart_toStartOf="@+id/ringToneName"
            app:layout_constraintTop_toBottomOf="@+id/tenMinutes"
            app:layout_constraintVertical_bias="0.07" />

        <RadioButton
            android:id="@+id/check15"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:buttonTint="#9CB135"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/fifteenMinutes"
            app:layout_constraintEnd_toEndOf="@+id/check10"
            app:layout_constraintStart_toStartOf="@+id/check10"
            app:layout_constraintTop_toTopOf="@+id/fifteenMinutes"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:id="@+id/twentyMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="20 minutes"
            android:textColor="#939292"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintStart_toStartOf="@+id/ringToneName"
            app:layout_constraintTop_toBottomOf="@+id/fifteenMinutes"
            app:layout_constraintVertical_bias="0.07" />

        <RadioButton
            android:id="@+id/check20"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:buttonTint="#9CB135"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/twentyMinutes"
            app:layout_constraintEnd_toEndOf="@+id/check15"
            app:layout_constraintStart_toStartOf="@+id/check15"
            app:layout_constraintTop_toTopOf="@+id/twentyMinutes"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:id="@+id/twentyFiveMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="25 minutes"
            android:textColor="#939292"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintStart_toStartOf="@+id/ringToneName"
            app:layout_constraintTop_toBottomOf="@+id/twentyMinutes"
            app:layout_constraintVertical_bias="0.1" />

        <RadioButton
            android:id="@+id/check25"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:buttonTint="#9CB135"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/twentyFiveMinutes"
            app:layout_constraintEnd_toEndOf="@+id/check20"
            app:layout_constraintStart_toStartOf="@+id/check20"
            app:layout_constraintTop_toTopOf="@+id/twentyFiveMinutes"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:id="@+id/thirtyMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="30 minutes"
            android:textColor="#939292"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintStart_toStartOf="@+id/ringToneName"
            app:layout_constraintTop_toBottomOf="@+id/twentyFiveMinutes"
            app:layout_constraintVertical_bias="0.1" />

        <RadioButton
            android:id="@+id/check30"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:buttonTint="#9CB135"
            android:checked="false"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/thirtyMinutes"
            app:layout_constraintEnd_toEndOf="@+id/check25"
            app:layout_constraintStart_toStartOf="@+id/check25"
            app:layout_constraintTop_toTopOf="@+id/thirtyMinutes"
            app:layout_constraintVertical_bias="0.47" />


        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:singleLine="true"
            android:text="Cancel"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/alarmView"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintHorizontal_bias="0.77"
            app:layout_constraintStart_toStartOf="@id/alarmView"
            app:layout_constraintTop_toBottomOf="@+id/thirtyMinutes" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:singleLine="true"
            android:text="Save"
            android:textColor="#9CB135"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/poppins"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/cancel"
            app:layout_constraintEnd_toEndOf="@+id/alarmView"
            app:layout_constraintStart_toEndOf="@+id/cancel"
            app:layout_constraintTop_toTopOf="@+id/cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

