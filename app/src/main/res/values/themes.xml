<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/bottom_nav_bg</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="timePickerOrange">
        <item name="android:textColorPrimary">@color/ready_color</item> <!-- color for digits -->
        <item name="android:textColor">@color/ready_color</item> <!-- color for colon -->
        <item name="android:colorControlNormal">@color/ready_color
        </item> <!-- color for (horizontal) delimeters -->
    </style>


    <style name="Button.WeekDay" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/ready_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/_50sdp</item>

    </style>

    <style name="Theme.Compose" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/dim_black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="background">@color/black</item>
    </style>

    <style name="Theme.Chart" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/ready_color</item>
        <item name="backgroundColor">@color/ready_color</item>
        <item name="background">@color/ready_color</item>
    </style>

    <style name="NavigationTheme" parent="Theme.FitnessApplication">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="AdTheme" >
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




</resources>