<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/alarm_new_bg"
        android:layout_marginBottom="@dimen/_5sdp" android:tag="layout/language_show_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">




            <View
                android:id="@+id/alarmView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </View>


<!--            <RadioGroup-->
<!--                android:id="@+id/checkGroup"-->
<!--                android:layout_width="@dimen/_30sdp"-->
<!--                android:layout_height="@dimen/_30sdp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/ringToneName"-->
<!--                app:layout_constraintEnd_toEndOf="@id/alarmView"-->
<!--                app:layout_constraintTop_toTopOf="@+id/ringToneName">-->

            <RadioButton
                android:id="@+id/check"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:buttonTint="@color/white"
                android:checked="false"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintBottom_toBottomOf="@+id/langName"
                app:layout_constraintEnd_toEndOf="@id/alarmView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/langName"/>
<!--            </RadioGroup>-->

            <TextView
                android:id="@+id/langName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:singleLine="true"
                android:text="English"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="@id/alarmView"
                app:layout_constraintEnd_toStartOf="@+id/flag"
                app:layout_constraintStart_toEndOf="@+id/check"
                app:layout_constraintTop_toTopOf="@+id/alarmView" />

            <ImageView
                android:id="@+id/flag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/english__usa_"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="@id/alarmView"
                app:layout_constraintEnd_toEndOf="@+id/alarmView"
                app:layout_constraintTop_toTopOf="@+id/alarmView" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

         