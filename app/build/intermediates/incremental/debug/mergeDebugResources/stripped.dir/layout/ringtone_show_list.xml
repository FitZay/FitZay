<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layoutDirection="ltr"
        android:layout_marginBottom="@dimen/_5sdp"
        android:tag="layout/ringtone_show_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent">




            <View
                android:id="@+id/alarmView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </View>


<!--            <RadioGroup-->
<!--                android:id="@+id/checkGroup"-->
<!--                android:layout_width="@dimen/_30sdp"-->
<!--                android:layout_height="@dimen/_30sdp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/ringToneName"-->
<!--                app:layout_constraintEnd_toEndOf="@id/alarmView"-->
<!--                app:layout_constraintTop_toTopOf="@+id/ringToneName">-->

            <RadioButton
                android:id="@+id/check"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:buttonTint="#9CB135"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="@+id/ringToneName"
                app:layout_constraintEnd_toEndOf="@id/alarmView"
                app:layout_constraintTop_toTopOf="@+id/ringToneName"/>
<!--            </RadioGroup>-->

            <TextView
                android:id="@+id/ringToneName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_10sdp"
                android:singleLine="true"
                android:text="Ring Tone Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:paddingStart="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="@id/alarmView"
                app:layout_constraintEnd_toStartOf="@+id/check"
                app:layout_constraintStart_toStartOf="@+id/alarmView"
                app:layout_constraintTop_toTopOf="@+id/alarmView" />

            <TextView
                android:id="@+id/ringToneTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time"
                android:textStyle="normal"
                android:textColor="#939292"
                android:textSize="@dimen/_10ssp"
                android:singleLine="true"
                android:paddingStart="@dimen/_5sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintBottom_toBottomOf="@+id/alarmView"
                app:layout_constraintEnd_toEndOf="@+id/alarmView"
                app:layout_constraintStart_toStartOf="@+id/ringToneName"
                app:layout_constraintTop_toBottomOf="@+id/ringToneName" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

         